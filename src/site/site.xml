<project xmlns="http://maven.apache.org/DECORATION/1.8.0"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/DECORATION/1.8.0 http://maven.apache.org/xsd/decoration-1.8.0.xsd"
  name="Common Platform Enumeration Java Reference Implementation">
  <skin>
    <groupId>io.github.devacfr.maven.skins</groupId>
    <artifactId>reflow-maven-skin</artifactId>
    <version>2.2.0</version>
  </skin>
  <bannerLeft>
    <name><![CDATA[
      <span class="text-primary">CPE 2.3</span> Reference Implementation
      ]]>
    </name>
    <href>${this.site.url}</href>
  </bannerLeft>
  <googleAnalyticsAccountId>UA-42404149-54</googleAnalyticsAccountId>
  <publishDate position="navigation-bottom" format="yyyy-MM-dd"/>
  <version position="none"/>
  <edit>${this.scm.url}</edit>

  <custom>
    <reflowSkin>
      <absoluteResourceURL>${project.url}</absoluteResourceURL>
      <localResources>false</localResources>
      <skinAttribution>false</skinAttribution>
      <smoothScroll>true</smoothScroll>
      <theme>bootswatch-flatly</theme>
      <highlightJs>true</highlightJs>
      <highlightJsTheme>github</highlightJsTheme>
      <highlightJsVersion>9.18.1</highlightJsVersion>
      <breadcrumbs>true</breadcrumbs>
      <brand>
      	<name>
      	 <![CDATA[
      	 <div id="nistheadergoeshere"></div> CPE 2.3 RI
      	 ]]>
      	</name>
        <href>${project.site.url}</href>
      </brand>
      <endContent>
        <script type="text/javascript">
        <![CDATA[
        document.querySelectorAll('div.source pre').forEach((block) => {
          hljs.highlightBlock(block);
        });
        $(document).ready(function () {
          $.ajax({
            url: "https://pages.nist.gov/nist-header-footer/boilerplate-header.html",
            cache: false,
            dataType: "html",
            success: function (data) { $('#nistheadergoeshere').append(data); }
          });
          $("body").append('<div id="nistfootergoeshere"></div>');
          $.ajax({
            url: "https://pages.nist.gov/nist-header-footer/boilerplate-footer.html",
            cache: false,
            dataType: "html",
            success: function (data) { $('#nistfootergoeshere').append(data); }
          });
        });
        ]]>
        </script>
      </endContent>
      <slogan>Providing a Java API for creating and using CPE Names.</slogan>
      <titleTemplate>%2$s | %1$s</titleTemplate>
      <header enabled="true"/>
      <!-- Use Table of Contents at the top of the page (max 6 elements) -->
      <toc numberItems="6" cssClass="navbar-dark bg-dark border rounded">top</toc>
      <navbar filterMenu="Documentation|Maven documentation"
        cssClass="navbar-dark bg-primary border-bottom" center="false" alignMenu="right"/>
      <navside-menu cssClass="navside-light bg-light"/>
      <footer theme="light"/>
      <!-- Split menus in the bottom navigation -->
      <bottomNav>
        <column>Main</column>
        <column>Contribute</column>
      </bottomNav>
      <bottomDescription quote="false">
        <![CDATA[
          <div>
            The <span class="text-info">CPE 2.3 reference implementation</span> is an API for programaticly creating and using CPE Names using the Java programming language.
            <div class="m-1">
              <a href="${this.scm.url}" class="p-1 text-secondary"><i class="fab fa-github"></i></a>
              <a href="mailto:scap@nist.gov" class="p-1 text-secondary"><i class="fas fa-envelope"></i></a>
              <a href="https://gitter.im/usnistgov-cpe-ri" class="p-1 text-secondary" target="_blank"><i class="fab fa-gitter"></i></a>
            </div>
          </div>
        ]]>
      </bottomDescription>
      <markPageHeader>false</markPageHeader>
      <pages>
        <index project="cpe-reference-implementation">
          <header enabled="true" cssClass="bg-light"/>
          <shortTitle>CPE 2.3 RI</shortTitle>
          <toc>false</toc>
          <sections>
            <body/>
            <sidenav/>
          </sections>
        </index>
        <using>
          <sections>
            <body/>
          </sections>
        </using>
        <building>
          <toc>false</toc>
          <sections>
            <body/>
          </sections>
        </building>
      </pages>
    </reflowSkin>
  </custom>

  <body>
    <head>
      <![CDATA[
      <meta http-equiv="X-UA-Compatible" content="IE=edge" />
      <link rel="manifest" href="$resourcePath/site.webmanifest">
      <link rel="stylesheet" href="https://pages.nist.gov/nist-header-footer/css/nist-combined.css">
      <style>
      .subfooter {
      	display: none;
      }
      #m-top-navbar.bg-primary {
        background-color: #000 !important;
      }
      
	#nistheadergoeshere {
	  display: inline;
	}
	
	#nist-header {
	  display: inline;
	}
	
	#brandtext {
	  display: inline;
	}
	
	.nist-header__logo-link {
	  /* display: inline-block; */
	  display: inline;
	}
	
	.nist-header__logo-icon {
	  /* display: inline-block; */
	  display: inline;
    }
      
      </style>
      ]]>
    </head>
    <links>
      <item name="GitHub Project" href="${this.scm.url}"/>
    </links>
    <breadcrumbs>
